<h1>Languages</h1>

<% if can? :create, @language %>
<p><%= link_to 'New Language', new_language_path %></p>
<% end %>

<table>
  <tr>
    <th>Name</th>
  </tr>

  <% @languages.each do |language| %>
    <tr>
      <td><%= language.name %></td>
      <td><%= link_to 'Show', language_path(language) %></td>
      <td><%= link_to 'Edit', edit_language_path(language) %></td>
      <td><%= link_to 'Destroy', language_path(language),
             method: :delete,
             data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>

</table>
