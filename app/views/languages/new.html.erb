<h1>Create New Language</h1>

<% if @language.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@language.errors.count, "error") %> prohibited
      this language from being saved:
    </h2>
    <ul>
      <% @language.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%# The URL parameter will ensure that a POST method is sent to the route
    languages/ which in turn will call the languages#create method. %>
<%= form_for :language, url: languages_path do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', languages_path %>
