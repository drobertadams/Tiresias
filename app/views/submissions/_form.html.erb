<p><%= link_to 'Back', submissions_path %></p>

<%= form_for @submission do |f| %>

  <% if @submission.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h2>
        <%= pluralize(@submission.errors.count, "error") %> prohibited
        this submission from being saved:
      </h2>
      <ul>
        <% @submission.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control'%>
  </div>
  <div class="form-group">
    <%= f.label :work %>
    <%= f.collection_select(:work_id, Work.all, :id, :title, {:prompt=>false}, {class: 'form-control custom-select'}) %>
  </div>
  <div class="form-group">
    <%= f.label :author %>
    <%= f.collection_select(:author_id, Author.all, :id, :name, {:prompt=>false}, {class: 'form-control custom-select'}) %>
  </div>
  <div class="form-group">
    <%= f.label :language %>
    <%= f.collection_select(:language_id, Language.all, :id, :name, {:prompt=>false}, {class: 'form-control custom-select'}) %>
  </div>
  <div class="form-group">
    <%= f.label :translator %>
    <%= f.collection_select(:translator_id, Translator.all, :id, :name, {:prompt=>false}, {class: 'form-control custom-select'}) %>
  </div>
  <div class="form-group">
    <%= f.label :isbn %>
    <%= f.text_field :isbn, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :oclc %>
    <%= f.text_field :oclc, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :edition %>
    <%= f.text_field :edition, class: 'form-control'%>
  </div>
  <div class="form-check">
    <%= f.label :is_prose, class:'form-check-label' do %>
      <%= f.check_box :is_prose, class: 'form-check-input' %>
      Is Prose?
    <% end %>
  </div>
  <div class="form-check">
    <%= f.label :is_poetry, class:'form-check-label' do %>
      <%= f.check_box :is_poetry, class: 'form-check-input' %>
      Is Poetry?
    <% end %>
  </div>
  <div class="form-group">
    <%=f.label :medium %>
    <%= f.collection_select(:medium_id, Medium.all, :id, :name, {:prompt=>false}, {class: 'form-control custom-select'}) %>
  </div>
  <div class="form-group">
    <%= f.label :publication_year %>
    <%= f.text_field :publication_year, class: 'form-control' %></div>
  <div class="form-group">
    <%= f.label :notes %>
    <%= f.text_area :notes, class: 'form-control' %>
  </div>

  <%= f.submit %>

<% end %>
