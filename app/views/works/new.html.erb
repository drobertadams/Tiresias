<h1>Create New Work</h1>

<% if @work.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@work.errors.count, "error") %> prohibited
      this work from being saved:
    </h2>
    <ul>
      <% @work.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%# The URL parameter will ensure that a POST method is sent to the route
    works/ which in turn will call the works#create method. %>
<%= form_for :work, url: works_path do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', works_path %>
