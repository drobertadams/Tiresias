
<h1> Authors</h1>

<% if can? :create, @author %>
  <p><%= link_to 'New Author', new_author_path %></p>
<% end %>

<table>
  <tr>
    <th>Name</th>
  </tr>

  <% @authors.each do |author| %>
    <tr>
      <td><%= author.name %></td>
      <td><%= link_to 'Show', author_path(author) %></td>
      <% if can? :update, Author %>
        <td><%= link_to 'Edit', edit_author_path(author) %></td>
        <td><%= link_to 'Destroy', author_path(author),
               method: :delete,
               data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tr>
  <% end %>

</table>
