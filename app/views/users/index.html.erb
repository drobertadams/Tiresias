<h1>Users</h1>

<% if can? :create, User %>
<p><%= link_to 'New User', new_user_path %></p>
<% end %>

<table>
  <tr>
    <th>Email</th> <th>Role</th>
  </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= user.email %></td>
      <td><%= user.role %></td>
      <td><%= link_to 'Show', user_path(user) %></td>
      <td><%= link_to 'Edit', edit_user_path(user) %></td>
      <td>
        <% if user != current_user %>
          <%= link_to 'Destroy', user_path(user),
               method: :delete,
               data: { confirm: 'Are you sure?' } %>
          <% end %>
      </td>
    </tr>
  <% end %>

</table>
